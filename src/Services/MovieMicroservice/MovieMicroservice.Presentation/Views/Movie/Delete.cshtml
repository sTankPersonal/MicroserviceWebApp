@using MovieMicroservice.Presentation.Models.Movie
@model MovieViewModel
@{
	ViewData["Title"] = "Delete Movie";
}

<h2>Delete Movie - @Model.Name</h2>
<h3>Are you sure you want to delete this movie?</h3>

<form asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Recipe" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
