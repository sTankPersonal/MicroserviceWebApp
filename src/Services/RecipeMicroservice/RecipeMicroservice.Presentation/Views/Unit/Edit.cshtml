@model RecipeMicroservice.PresentationMVC.Models.Unit.EditUnitViewModel
@{
	ViewData["Title"] = "Edit Unit";
}

<h2>Edit Unit - @Model.Name</h2>

<form asp-controller="Unit" asp-action="Edit" asp-route-id="@Model.Id" method="post">
	<input type="hidden" asp-for="Id" />
	<div class="mb-3">
		<label asp-for="Name" class="form-label"></label>
		<input asp-for="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
	<a asp-controller="Unit" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
