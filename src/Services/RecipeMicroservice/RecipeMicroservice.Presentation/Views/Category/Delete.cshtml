@model RecipeMicroservice.Presentation.Models.Category.CategoryViewModel
@{
	ViewData["Title"] = "Delete Category";
}

<h2>Delete Category - @Model.Name</h2>
<h3>Are you sure you want to delete this category?</h3>

<form asp-controller="Category" asp-action="Delete" method="post">
	@Html.AntiForgeryToken()
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-controller="Category" asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
