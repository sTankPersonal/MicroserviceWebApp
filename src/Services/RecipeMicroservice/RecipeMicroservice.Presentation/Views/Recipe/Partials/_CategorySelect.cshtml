@model RecipeMicroservice.Application.DTOs.Recipe.UpdateRecipeDto
@{
    ViewData["Title"] = "Category Select";
    var categories = (List<SelectListItem>)ViewBag.Categories;
}


<form asp-controller="Recipe" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Categories</label>
        <select id="categorySelect" name="categoryNames" multiple="multiple" class="form-control">
            @foreach (var c in categories)
            {
                <option value="@c.Text">@c.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
</form>

@section Scripts {
    <script>
        $('#categorySelect').select2({
            tags: true,
            placeholder: "Select or add categories"
        });
    </script>
}
