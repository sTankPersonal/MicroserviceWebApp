@model RecipeMicroservice.Presentation.Models.Recipe.RecipeViewModel
@{
	ViewData["Title"] = "Delete Recipe";
}

<h2>Delete Recipe - @Model.Name</h2>
<h3>Are you sure you want to delete this recipe?</h3>

<form asp-controller="Recipe" asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Recipe" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
